@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">

                        <form method="post">
                            <input type="hidden" asp-for="UserCommentId" />
                            <input type="hidden" asp-for="ProductId" />
                            <label>Kullanıcı Adı Soyadı</label>
                            <input type="text" class="form-control" asp-for="NameSurname" />
                            <br />
                            <label>Ürün Adı</label>
                            <input type="text" class="form-control" value="@ViewBag.ProductName" readonly />
                            <br />
                            <label>Kullanıcı Görsel</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" />
                            <br />
                            <label>Email Adresi</label>
                            <input type="text" class="form-control" asp-for="Email" />
                            <br />
                            <label>Kullanıcı Puanı</label>
                            <input type="text" class="form-control" asp-for="Rating" />
                            <br />
                            <label>Yorum Tarihi</label>
                            <input type="text" class="form-control" asp-for="CreatedDate" />
                            <br />
                            <label>Yorum</label>
                            <textarea row="3" class="form-control" asp-for="CommentDetail"></textarea>
                            <br />
                            <button class="btn btn-primary">Yorumu Güncelle</button>
                        </form>
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>
